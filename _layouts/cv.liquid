---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.cv_pdf %}
      <a
        {% if page.cv_pdf contains '://' %}
          href="{{ page.cv_pdf }}"
        {% else %}
          href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
        {% endif %}
        target="_blank"
        rel="noopener noreferrer"
        class="float-right"
      >
        <i class="fa-solid fa-file-pdf"></i> Download PDF
      </a>
    {% endif %}
  </header>

  <article>
    <div class="cv">
      {% if page.cv_pdf %}
        <iframe
          src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
          width="100%"
          height="1200px"
          style="border: none;"
        ></iframe>
      {% else %}
        <p>No CV PDF uploaded yet.</p>
      {% endif %}
    </div>
  </article>
</div>
